{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "attach",
      "name": "Docker: Attach to Node",
      "address": "localhost",
      "port": 4242,
      "protocol": "inspector",
      "localRoot": "${workspaceFolder}/src",
      "remoteRoot": "/app/src",
      "sourceMaps": true,
      "restart": true,
      "sourceMapPathOverrides": {
        "/app/*": "${workspaceRoot}/*"
      }
    }
  ]
}
